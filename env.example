# Configuración del Sistema de Gestión de Taller
# ===============================================
# Copiar este archivo como .env y completar con valores reales

# CONFIGURACIÓN DE FLASK
# =====================
SECRET_KEY=cambiar_por_clave_secreta_muy_segura_en_produccion
FLASK_DEBUG=False
FLASK_ENV=production

# CONFIGURACIÓN DE BASE DE DATOS
# ==============================
DATABASE_PATH=taller.db

# CONFIGURACIÓN DE ARCHIVOS
# =========================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# CONFIGURACIÓN DE LOGS
# ====================
LOG_LEVEL=INFO
LOG_FILE=taller.log

# CONFIGURACIÓN DE BACKUP
# =======================
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
BACKUP_FOLDER=backups

# CONFIGURACIÓN DE SERVIDOR
# =========================
HOST=0.0.0.0
PORT=5000
WORKERS=4

# CONFIGURACIÓN DE SEGURIDAD
# ==========================
SESSION_TIMEOUT=3600
ALLOWED_EXTENSIONS=.xlsx,.xls
MAX_LOGIN_ATTEMPTS=5

# CONFIGURACIÓN DE EMAIL (FUTURO)
# ===============================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu_email@gmail.com
SMTP_PASSWORD=tu_password_app
EMAIL_SENDER=Sistema Taller <noreply@taller.com>

# CONFIGURACIÓN DE NOTIFICACIONES (FUTURO)
# ========================================
ENABLE_NOTIFICATIONS=False
STOCK_LOW_THRESHOLD=5
MAINTENANCE_REMINDER_DAYS=7
